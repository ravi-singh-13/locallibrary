extends layout 

block content  

    h1 #{title}: #{book.title} 

    if book_instances.length 
        p #[strong please delete the following instance before attempting to delete this book.] 

        div(style='margin-left=20px; margin-top=20px')  

            h4 Book instance 


            dl 
            each instance in book_instances
                dt 
                    a(href=instance.url) #{instance.imprint}
                  

    else 
        p Do you realy want to delete the book. 

        form(method='POST' action='') 
            div.form-group 
                input#genreid.form-control(type="hidden", name="bookid", required= "true", value=book._id) 
            button.btn.btn-primary(type="submit") Delete               
                        