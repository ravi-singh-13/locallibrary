extends layout 

block content  

    h1 #{title}: #{genre.name} 

    if books.length 
        p #[strong please delete the following books before attempting to delete this author.] 

        div(style='margin-left=20px; margin-top=20px')  

            h4 Books 


            dl 
            each book in books 
                dt 
                    a(href=book.url) #{book.title}
                dd #{book.summary}  

    else 
        p Do you realy want to delete the genre. 

        form(method='POST' action='') 
            div.form-group 
                input#genreid.form-control(type="hidden", name="genreid", required= "true", value=genre._id) 
            button.btn.btn-primary(type="submit") Delete               
                        

        
